{{#if logged_in}}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card border-dark mb-3">
                <div class="card-header">
                    Update Post
                </div>
                <div class="card-body">
                    <form class="post-form">
                        <div class="form-group">
                            <label for="post-title">Title</label>
                            <input type="form-input" class="form-control" id="post-title" value="{{title}}">

                        </div>
                        <div class="form-group">
                            <label for="post-desc">Content</label>
                            <textarea class="form-control" id="post-desc" value="{{content}}"></textarea>
                        </div>
                        <button type="submit" class="btn btn-light border border-dark update-button"
                            data-id="{{id}}">Update</button>
                    </form>
                </div>
            </div>
        </div>

        {{else}}
        <a href="/login">You must login first to view this page</a>
        {{/if}}

        <script src="/js/update.js"></script>