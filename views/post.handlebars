<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card border-dark mb-3">
                <div class="card-header">
                    {{title}}
                </div>
                <div class="card-body">
                    {{content}}
                </div>
                <div class="card-footer"><small class="text-muted">Created {{format_date date_created}} by
                        {{user.username}} | <a href="#" class="update-post" data-id="{{id}}">Update</a> | <a href="#"
                            class="delete-post" data-id="{{id}}">Delete</a> </small></div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card border-dark mb-3">
                <div class="card-header">
                    Add A Comment
                </div>
                <div class="card-body">
                    <form class="form comment-form">
                        <div class="form-group">
                            <label for="comment-name">Name</label>
                            <input type="text" class="form-control" id="comment-name">
                        </div>
                        <div class="form-group">
                            <label for="comment">Comment</label>
                            <textarea class="form-control" id="comment"></textarea>
                        </div>
                        <button type="submit" class="btn btn-light border border-dark comment-button"
                            id="{{id}}">Submit</button>
                    </form>

                    <hr />
                    <h5>Comments</h5>
                    {{#each comments as |comment|}}
                    {{> comment-details}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script src="/js/post.js"></script>